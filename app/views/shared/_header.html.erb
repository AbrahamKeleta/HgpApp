<header>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button"
              class="navbar-toggle"
              data-toggle="collapse"
              data-target="#bs-example-navbar-collapse-1">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to "Home", root_path %></li>
              <li class="active"><li><%= link_to "My Lab", user_projects_path %></li>
            </ul>

            <%= form_tag(search_dashboards_path,
                            class: "navbar-form navbar-left",
        	                  role: "search") do %>
                <div class="form-group">
                  <%= text_field_tag :search_name, nil, placeholder:
                      		"Search for Geniuses", class: "form-control"  %>
                </div>
                <%= submit_tag "Search", class: 'btn btn-default' %>
              <% end %>

            <ul class="nav navbar-nav navbar-right">
              <% unless user_signed_in? %>
                <li><%= link_to "HGP staff sign in", admins_root_path %></li>
                <li><%= link_to "HGP staff sign up", new_admin_registration_path %></li>
                <li><%= link_to "Tap in", new_user_session_path %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
              <% else %>
                <li><%= link_to "HGP Staff Lounge", admin_cohort_path(current_user) %></li>
                <li><%= link_to "Tap out", destroy_user_session_path, method: :delete %></li>
                <li><%= link_to "HGP staff Tap out", admins_root_path %></li>

                <div class="navbar-right signed-in-user">
                  <p class="navbar-text">
                    Signed in as <%= "#{current_user.email}" %>
                  </p>
                </div>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
