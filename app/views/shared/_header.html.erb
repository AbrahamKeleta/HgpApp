<header>
  <body>
    <div class=page>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
           <ul class="nav navbar-nav">
             <li class="active"><%= link_to "Home", root_path %></li>
             <li class="active"><%= link_to "Genius Lounge - Staff only", hgp_staff_dashboard_path %></li>
             <li class="active"><%= link_to "Map", locations_path %></li>
             <li class="active"><%= link_to "Calendar", calendars_path %></li>

             <li class="active"><a href="contact">Contact</a></li>
             <% if current_user %>
               Signed in as <strong><%= current_user.email %></strong>!
              <li class="active"><%= link_to "My Lab", user_projects_path(:current_user) %></li>

             <% end %>


             <script>
             function onSignIn(googleUser) {
                 var profile = googleUser.getBasicProfile();
                 console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
                 console.log('Name: ' + profile.getName());
                 console.log('Image URL: ' + profile.getImageUrl());
                 console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
               }
             </script>
           <li class="active"><a href="#" onclick="signOut();">Sign out</a>
             <li class="active">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Featured-Geniuses
                <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="isaiah">Isaiah</a></li>
                  <li><a href="george">George</a></li>
                  <li><a href="malik">Malik</a></li>
                </ul>
              </li>
           <script>
             function signOut() {
               var auth2 = gapi.auth2.getAuthInstance();
               auth2.signOut().then(function () {
                 console.log('User signed out.');
               });
             }
           </script>
           </ul>
         </div>
           <%= form_tag(search_classrooms_path,
                           class: "navbar-form navbar-left",
                           role: "search") do %>
               <div class="form-group">
                 <%= text_field_tag :search_name, nil, placeholder:
                         "Search for Geniuses", class: "form-control"  %>
               </div>
               <%= submit_tag "Search", class: 'btn btn-default' %>
             <% end %>



             <%= form_tag new_event_url(:calendar_id) do %>
                <%= submit_tag 'Add event' %>
             <% end %>

             <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">


           </div>


             <br>
             <div class="navbar-header">
                 <h1 class="brand-heading">The Hidden Genius Project</h1>
             </div>
           </ul>
         </div>

     </nav>
   </header>
 </div>
</body>
