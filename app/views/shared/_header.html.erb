<header>
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
           <ul class="nav navbar-nav">
             <li class="active"><%= link_to "Home", root_path %></li>
             <li class="active"><%= link_to "Genius Lounge - Staff only", genius_staff_dashboard_path %></li>
           </ul>
           <%= form_tag(search_users_path,
                           class: "navbar-form navbar-left",
                           role: "search") do %>
               <div class="form-group">
                 <%= text_field_tag :search_name, nil, placeholder:
                         "Search for Geniuses", class: "form-control"  %>
               </div>
               <%= submit_tag "Search", class: 'btn btn-default' %>
             <% end %>

           <ul class="nav navbar-nav navbar-right">

             <% unless current_user %>
                   <li><%= link_to "My Lab", projects_path(current_user) %></li>
                   <li><%= link_to "Tap out", destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "Genius sign up", staff_sign_up_path  %></li>
                  <li><%= link_to "Tap2 in", new_admin_user_session_path %></li>
                  <li><%= link_to "Tap in", new_genius_staff_cohort_path %></li>
                   <div class="navbar-right signed-in-user">
                     <p class="navbar-text">
                       Signed in as <%= "#{current_user.email}" %>
                     </p>
                   </div>
              <% end %>
              <li class="dropdown">
                 <a class="dropdown-toggle" data-toggle="dropdown" href="#">Featured-Geniuses
                 <span class="caret"></span></a>
                 <ul class="dropdown-menu">
                   <li><a href="#">Isaiah</a></li>
                   <li><a href="#">George</a></li>
                   <li><a href="#">Malik</a></li>
                 </ul>
               </li>
             <br>
             <div class="navbar-header">
                 <h1 class="brand-heading">The Hidden Genius Project</h1>
             </div>
           </ul>
         </div>
       </div>
     </nav>
   </header>
