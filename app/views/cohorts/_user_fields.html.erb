<fieldset>
<%= form_with(model: @cohort_user, local: true) do |f| %>
  <div class='form-group'>
    <div class='control-label col-md-3'>
      <%= f.label :username %>
    </div>
    <div class='col-md-9'>
      <%= f.text_field :username %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-md-3'>
      <%= f.label :name %>
    </div>
    <div class='col-md-9'>
      <%= f.text_field :name, class: 'form-control',
        autofocus: true %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-md-3'>
      <%= f.label :email %>
    </div>
    <div class='col-md-9'>
      <%= f.text_field :email, class: 'form-control'  %>
    </div>
  </div>

  <div class='form-group'>
    <div class='control-label col-md-3'>
      <%= f.label :password %>
    </div>
    <div class='col-md-9'>
      <%= f.text_field :password, class: 'form-control',
        autocomplete: "off" %>

    </div>
  </div>
  <div class='form-group'>
    <div class='control-label col-md-3'>
      <%= f.label :password_confirmation %>
    </div>
    <div class='col-md-9'>
        <%= f.text_field :password_confirmation,
                  class: 'form-control', autocomplete: "off" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-md-offset-3 col-md-9'>
      <%= f.submit "Sign up", class: 'btn btn-success btn-lg' %>
    </div>
  </div>

    <div class='form-group'>
      <div class='col-md-offset-3 col-md-9'>
        <%= render 'user_fields', f: builder %>
      </div>
      <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Remove Genius" %>
        <%= f.fields_for :users do |builder| %>

      <% end %>
      <%= link_to_add_fields "Add Genius", f, :users %>
    </div>
    <% end %>
</fieldset>
